@import url('../variables.pcss');

.input-field {

}

.input-field__details {
	margin-top: 4px;
}

.input-field__input,
.input-field__input:focus {
	box-sizing: border-box;
	border-radius: 2px;
	border: 1px solid #000;
	width: 100%;
	padding: 2px 5px;
	outline: none;
	font: 1.6rem/2.4rem var(--default-font-face);
}
