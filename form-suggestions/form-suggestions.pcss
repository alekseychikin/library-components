@import url('../variables.pcss');

.form-suggestions {
	display: flex;
	flex-direction: column;
	border-radius: 0.4rem;
	padding: 0.6rem;
	padding: 0.3rem 0.5rem;
	background: var(--light-gray);
	box-shadow: 0 4px 1rem var(--gray);
}

.form-suggestions__button {
	border: 0;
	border-radius: 4px;
	padding: 0.3rem 1rem;
	background: none;
	text-align: left;
}

.form-suggestions__button:hover {
	background: var(--primary);
	color: #fff;
}
