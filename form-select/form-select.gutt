<param name={$label} value="" />
<param name={$value} value="" />
<param name={$id} value="" />
<param name={$placeholder} value="" />
<param name={$role} value="" />
<param name={$disabled} value={false} />
<param name={$multiple} value={false} />

<label class={classes("form-select", $multiple ?? "form-select--multiple" !! "")}>
	<select id={$id} value={$value} placeholder={$placeholder} disabled={$disabled} multiple={$multiple} data-role={$role}>
		<slot />
	</select>
</label>
