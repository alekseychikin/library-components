@keyframes shaker {
	0% {
		transform: translateX(-30px);
	}

	20% {
		transform: translateX(20px);
	}

	40% {
		transform: translateX(-15px);
	}

	60% {
		transform: translateX(10px);
	}

	80% {
		transform: translateX(-5px);
	}

	100% {
		transform: translateX(0);
	}
}

.shaker.shake {
	animation: shaker 0.5s ease-in-out;
}
